@page
@model MadEasy.Pages.Dwellings.IndexModel

@{
    ViewData["Title"] = "All Dwellings";
}

<h1>All Dwellings</h1>

<p>
    <a asp-page="Create">Create a New Dwelling</a>
</p>
<table class="table" style="color:white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dwelling[0].PropertyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dwelling[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dwelling[0].Agent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dwelling[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dwelling[0].SalesOffice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dwelling[0].Type)
            </th>
       
            <th>
                @Html.DisplayNameFor(model => model.Dwelling[0].Available)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Dwelling) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Agent.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesOffice.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
    
            <td>
                
                @if (item.Available)
                {
                    <span class="badge badge-warning">Available</span>
                }
                else
                {
                    <span class="badge badge-secondary">Not Available</span>
                }
            </td>
  
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
