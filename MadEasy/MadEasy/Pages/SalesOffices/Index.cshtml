@page
@model MadEasy.Pages.SalesOffices.IndexModel

@{
    ViewData["Title"] = "All Sales Offices";
}

<h1>All Sales Offices</h1>

<p>
    <a asp-page="Create">Create a New Sales Office</a>
</p>
<table class="table" style="color:white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SalesOffice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
