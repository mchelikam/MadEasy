@page
@model MadEasy.Pages.Agents.DetailsModel

@{
    ViewData["Title"] = "Details-Agent";
}

<h1>Agent Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.SalesOffice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.SalesOffice.Name)
        </dd>
    </dl>
</div>

<div>
    <h2>Dwellings</h2>
    <table class=" table table-sm " style="color:white">
        <thead>
            <tr>
                <th>Property Name</th>
                <th>Property Address</th>
                <th>Property Type</th>
                <th>Details</th>
            </tr>
            </thead>
        <tbody>
        @foreach (var agent in Model.Agent.Dwellings)
        { 
            <tr>
                <td>@agent.PropertyName </td>
                <td>@agent.Address</td>
                <td>@agent.Type</td>
                <td><a asp-page="/Dwellings/Details" asp-route-id="@agent.Id">Details</a></td>
            </tr>    
            }
            </tbody>
        </table>
    </div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Agent.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
